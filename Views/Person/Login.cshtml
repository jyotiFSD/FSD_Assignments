@model TwitterClone.Entities.LoginViewModel
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Welcome to my Twitter Clone app</h2>
<div class="row">
    <div class="col-md-8">
        <section id="loginForm">
            @using (Html.BeginForm("Login","person",FormMethod.Post))
            {
                @Html.AntiForgeryToken()
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <h3>Log In</h3>
                <div class="form-group">
                    @Html.LabelFor(m => m.UserName, new { @class = "col-md-2 control-label" })
                    <div class="col-md-10">
                         @Html.TextBox("uname", "", new { @class = "form-control" })
                    </div>
                    <br />
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.Password, new { @class = "col-md-2 control-label" })
                    <div class="col-md-10">
                        @Html.Password("pwd", "", new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-10">
                        <span class="text-danger">@TempData["err"]</span>
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Login" class="btn btn-default" />
                    </div>
                </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            New User ?
            @Html.ActionLink("SignUp", "Create")
        </div>
    </div>
                
            }
        </section>
    </div>
</div>
